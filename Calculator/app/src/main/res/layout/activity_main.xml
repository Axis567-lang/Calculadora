<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/imagenkul" />

    <Button
        android:id="@+id/butt4"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butt5"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/butt1"
        app:layout_constraintTop_toBottomOf="@+id/butt1" />

    <Button
        android:id="@+id/butt0"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttDot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/butt7"
        app:layout_constraintTop_toBottomOf="@+id/butt7"
        app:layout_constraintVertical_bias="0.00999999" />

    <Button
        android:id="@+id/buttDel"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:contentDescription="@android:string/cancel"
        android:drawableStart="@drawable/del"
        android:fontFamily="sans-serif-light"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttRes"
        app:layout_constraintStart_toStartOf="@+id/butt9"
        app:layout_constraintTop_toBottomOf="@+id/butt9"
        app:layout_constraintVertical_bias="0.024" />

    <Button
        android:id="@+id/butt3"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="16dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/buttPlus"
        app:layout_constraintHorizontal_bias="0.972"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttDiv"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="/"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/buttTimes"
        app:layout_constraintStart_toStartOf="@+id/buttTimes"
        app:layout_constraintTop_toBottomOf="@+id/buttTimes" />

    <Button
        android:id="@+id/butt5"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butt6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/butt2"
        app:layout_constraintTop_toBottomOf="@+id/butt2" />

    <Button
        android:id="@+id/butt9"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/buttTimes"
        app:layout_constraintStart_toStartOf="@+id/butt6"
        app:layout_constraintTop_toBottomOf="@+id/butt6" />

    <Button
        android:id="@+id/buttDot"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="."
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttDel"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/butt8"
        app:layout_constraintTop_toBottomOf="@+id/butt8"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/butt1"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butt2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/butt2"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="56dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butt3"
        app:layout_constraintHorizontal_bias="0.834"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttRes"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="="
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttDiv"
        app:layout_constraintStart_toStartOf="@+id/buttDiv"
        app:layout_constraintTop_toBottomOf="@+id/buttDiv"
        app:layout_constraintVertical_bias="0.195" />

    <Button
        android:id="@+id/buttMin"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="-"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/buttPlus"
        app:layout_constraintStart_toStartOf="@+id/buttPlus"
        app:layout_constraintTop_toBottomOf="@+id/buttPlus" />

    <Button
        android:id="@+id/butt8"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butt9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/butt5"
        app:layout_constraintTop_toBottomOf="@+id/butt5" />

    <Button
        android:id="@+id/buttTimes"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="x"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/buttMin"
        app:layout_constraintStart_toStartOf="@+id/buttMin"
        app:layout_constraintTop_toBottomOf="@+id/buttMin" />

    <Button
        android:id="@+id/butt6"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/buttMin"
        app:layout_constraintStart_toStartOf="@+id/butt3"
        app:layout_constraintTop_toBottomOf="@+id/butt3" />

    <Button
        android:id="@+id/butt7"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintEnd_toStartOf="@+id/butt8"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/butt4"
        app:layout_constraintTop_toBottomOf="@+id/butt4" />

    <Button
        android:id="@+id/buttPlus"
        android:layout_width="59dp"
        android:layout_height="54dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="60dp"
        android:background="#702E2E"
        android:fontFamily="sans-serif-light"
        android:text="+"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        android:textAlignment="viewEnd"
        android:textColor="#CECFE0FD"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@+id/input"
        app:layout_constraintStart_toStartOf="@+id/input"
        app:layout_constraintTop_toBottomOf="@+id/input" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="137dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textEnd"
        android:textColorHint="#C0CCEA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="131dp" />

</androidx.constraintlayout.widget.ConstraintLayout>